{
  "compilerOptions": {
    "allowJs": true,
    "rootDir": ".",
    "outDir": "./dist",
    "target": "ES6",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*.ts",
    "**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}